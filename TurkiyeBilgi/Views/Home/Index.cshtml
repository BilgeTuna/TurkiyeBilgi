@model HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

<form class="form-inline" method="get">
    <label>Bölge</label>
    <select asp-for="BolgeId" asp-items="Model.Bolgeler" name="bolgeId" class="form-control ml-2">
        <option value="">Tümü</option>
    </select>
    <button class="btn btn-success ml-2">Listele</button>
</form>

<h1>Türkiye'nin İlleri</h1>

<p>
    @foreach (var sehir in Model.Sehirler)
    {
        <a asp-controller="Sehir" asp-action="Index" asp-route-id="@sehir.Id">@sehir.SehirAd</a>
    }
</p>

